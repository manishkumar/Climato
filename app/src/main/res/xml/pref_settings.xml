<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:layout="@layout/pref_category"
        android:title="@string/settings_title_units">
        <ListPreference
            android:defaultValue="@string/setting_unit_metric"
            android:entries="@array/unitSystem"
            android:entryValues="@array/unitSystemValues"
            android:key="unit"
            android:layout="@layout/pref_item"
            android:title="@string/setting_units" />


        <ListPreference
            android:defaultValue="1"
            android:entries="@array/refreshIntervals"
            android:entryValues="@array/refreshIntervalsValues"
            android:key="refreshInterval"
            android:layout="@layout/pref_item"
            android:title="@string/setting_refreshInterval" />

    </PreferenceCategory>
</PreferenceScreen>